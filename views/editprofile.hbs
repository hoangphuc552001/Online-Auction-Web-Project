{{#section 'css'}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" integrity="sha512-f0tzWhCwVFS3WeYaofoLWkTP62ObhewQ1EZn65oSYDZUg1+CyywGKkWzm8BxaJj5HGKI72PnMH9jYyIFz+GH7g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{{/section}}
{{#section 'js'}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js" integrity="sha512-AIOTidJAcHBH2G/oZv9viEGXRqDNmfdPVPYOYKGy3fti0xIplnlgMHUGfuNRzC6FkzIo0iIxgFnr9RikFxK+sw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $('#txtDob').datetimepicker({
            timepicker:false,
            format:'d/m/Y',
            mask:true
        });
        $('#txtUsername').select();
    </script>
    <script>
        function validateForm() {
            var r = confirm("Are you sure to edit profile!");
            if (r == true) {
                var a = document.forms["Form"]["Name"].value;
                var b= document.forms["Form"]["Address"].value;
                var c= document.forms["Form"]["Birthday"].value;
                if (a == null || a == "" || b==null || b==""
                || c==null || c=="") {
                    alert("Please fill all required field");
                    return false;
                } else return true;
            }
            else {return false;}
        }
    </script>
{{/section}}
<main>
    <form id="frmEditprofile" method="post" name="Form" onsubmit="return validateForm()">
        <div class="container bootstrap snippets bootdey">
            <h1 class="text-primary">Edit Profile</h1>
            <hr/>
            <div class="row">
                <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center">
                        <img
                                src="https://cdn-icons-png.flaticon.com/512/147/147144.png"
                                class="avatar img-circle img-thumbnail"
                                alt="avatar"
                                width="150px" ,
                                height="150px"
                        />
                    </div>
                </div>

                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <h3>Personal info</h3>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Name:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="txtName" name="Name" type="text" value="{{name}}"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Address:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="txtAddress" name="Address" type="text"
                                       value="{{address}}"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Birthday:</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="txtDob" name="Birthday" type="text"
                                       value="{{birthday}}"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <input
                                        class="form-control"
                                        type="text"
                                        value="{{email}}"
                                        disabled
                                />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Company:</label>
                            <div class="col-lg-8">
                                <input
                                        class="form-control"
                                        type="text"
                                        value="HCMUS"
                                        disabled
                                />
                            </div>
                        </div>
                        <div class="btn-group ml-3 mr-1" role="group" aria-label="Basic example">
                            <button type="submit" class="btn btn-info">Save</button>
                        </div>
                        <div class="btn-group ml-3" role="group" aria-label="Basic example">
                            <a class="btn btn-danger"
                               href="/account/profile" role="button">
                                Cancel
                            </a>
                        </div>


                    </form>
                </div>
            </div>
        </div>
        <hr/>
    </form>

</main>
