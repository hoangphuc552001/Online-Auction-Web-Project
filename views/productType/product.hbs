<form method="GET">
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="First group">
            <button type="submit" formaction="/product/searchPrice" class="btn btn-light">Best Price</button>
        </div>
        <div class="btn-group mr-2" role="group" aria-label="Second group">
            <button type="submit" formaction="/product/searchTime"  class="btn btn-light">Last Minute</button>
        </div>
        {{#if authenticated}}
            <div class="btn-group mr-2" role="group" aria-label="Second group">
                <button type="submit" formaction="/product/watchList" class="btn btn-light">Watch List</button>
            </div>
        {{/if}}
    </div>
</form>

<!-- Page Content -->
<div class="products">
    <div class="container">
        <div class="row">
            {{#if this.empty}}
                <h5 class="card-title">Empty data</h5>
                <p class="card-text">With support text below as a natural lead-in
                    to additional content</p>
            {{else}}
                {{#each this.products}}
                    <div class="col-sm-4 mb-3 dev popular">
                        <div class="card h-100">
                            <img src="{{image}}" title="{{name}}" width="250px" height="250px">
                            <div class="card-body">
                                <h4 class="card-title">{{name}}
                                    {{#if minute}}
                                        <a href="https://icons8.com/icon/1ndSPjeQAOgK/flat-3.new-post"></a>
                                    {{/if}}
                                </h4>
                                <h5 class="card-title text-danger">Current Price: {{format_number current}}</h5>
                                <p class="card-text">Bidder: {{info}}</p>
                                <p class="card-text">Date Post: {{start}}</p>
                                <p class="card-text">Time Remaining: <span style="font-weight: bold;font-size: 20px">
                                    {{day}} days</span></p>
                                <p class="card-text">Bids:{{bids}}</p>
                                {{#if cap}}
                                    <p class="card-text">Buy now:{{format_number cap}}</p>
                                {{/if}}
                                {{#if authenticated}}
                                    {{#if removewl}}
                                        <div>
                                            <form method="post">
                                                <button type="submit" name="id" value={{id}} formaction="watchlist" class="btn btn-danger">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </button>
                                            </form>

                                        </div>
                                    {{else}}
                                        <div>
                                            <form method="post">
                                                <button type="submit" name="id" value={{id}}
                                                        class="btn btn-primary" {{#if checkwl}}
                                                        disabled
                                                {{/if}} formaction="watchlist">
                                                    Watch List
                                                </button>
                                            </form>
                                        </div>
                                    {{/if}}

                                {{/if}}
                            </div>
                            <div class="card-footer text-muted">
                                <a class="btn btn-sm btn-outline-primary"
                                   href="/detail/{{id}}" role="button">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>
</div>
